<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="LastFM.Auth.EditText.Field" parent="">
        <item name="android:textColor">@color/whiteOpaque</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/auth_text_size</item>
        <item name="android:background">@drawable/selector_bg_edit_text</item>
    </style>

    <style name="LastFM.TextInput" parent="">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/auth_text_size</item>
        <item name="android:textColorHint">@color/whiteOpaque</item>
        <item name="android:layout_marginTop">@dimen/auth_text_input_mg_top</item>
        <item name="android:layout_marginStart">@dimen/auth_default_mg_start</item>
        <item name="android:layout_marginEnd">@dimen/auth_default_mg_start</item>
    </style>

    <style name="LastFM.Button" parent="">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/selector_bg_btn</item>
        <item name="android:textSize">@dimen/auth_text_size</item>
        <item name="android:textColor">@color/whiteOpaque</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginStart">@dimen/auth_default_mg_start</item>
        <item name="android:layout_marginEnd">@dimen/auth_default_mg_start</item>
    </style>

    <style name="LastFM.ButtonTV" parent="">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/auth_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/enabled_textview_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/auth_default_mg_start</item>
        <item name="android:layout_marginEnd">@dimen/auth_default_mg_start</item>
    </style>

    <style name="LastFM.BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/whiteOpaque</item>
    </style>

</resources>
